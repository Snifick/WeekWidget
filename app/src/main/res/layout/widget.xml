




<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="300dp"
    android:id="@+id/linLayout"
    android:layout_height="wrap_content"
    android:theme="@style/Theme.LetsTry.AppWidgetContainer"
    android:background="@drawable/app_widget_background6"
    android:orientation="vertical"
    android:padding="12dp"
    >


    <TextView
        android:id="@+id/appwidget_tex3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:gravity="center"
        android:text="Последнее обновление: --/--/---- --:--:--"
        android:textAlignment="center"
        android:textSize="12sp"
        android:textColor="#252525"
        android:textStyle="bold|italic" />
    <TextView

        android:id="@+id/nochety"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:text="По счету:--"
        android:layout_centerInParent="true"
        android:layout_gravity="center"
        android:textSize="12sp"
        android:textColor="#252525"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/appwidget_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"


        android:gravity="center"
        android:text="Неделя: ------"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textColor="#252525"
        android:textStyle="bold" />










</LinearLayout>
